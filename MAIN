<script>
const quiz=[
{q:"Gdzie byli≈õmy na pierwszym wsp√≥lnym wyje≈∫dzie zagranicznym?",a:["Chorwacja","W≈Çochy","Czechy","Niemcy"],correct:"Chorwacja"},
{q:"Od kiedy formalnie jeste≈õmy razem?",input:true},
{q:"Nad jakim jeziorem byli≈õmy w Niemczech?",a:["Sorpesee","Bodensee","Chiemsee","Eibsee"],correct:"Sorpesee"},
{q:"Jakie jest nasze ulubione danie?",a:["Pizza","Sushi","Burgery","Pasta"],correct:"Pizza"},
{q:"Jak bardzo Bartek Ciƒô kocha (1‚Äì10)?",a:["11"],correct:"11"},
{q:"Kto pierwszy powiedzia≈Ç ‚Äûkocham‚Äù?",a:["Hania","Bartek"],correct:"Bartek"},
{q:"Kto siƒô bardziej stresuje?",a:["Hania","Bartek"],correct:"Hania"},
{q:"Kto czƒô≈õciej zostawia puste opakowania?",a:["Bartek","Hania"],correct:"Bartek"}
];

let step=0;
const sections=document.querySelectorAll("section");

function next(){
sections.forEach(s=>s.classList.add("hidden"));
if(step<quiz.length){
document.querySelector(".quiz").classList.remove("hidden");
load();
} else if(step===quiz.length){
document.getElementById("gallery").classList.remove("hidden");
} else {
document.getElementById("final").classList.remove("hidden");
}
step++;
}

function load(){
const q=quiz[step];
document.getElementById("q").innerText=q.q;
const a=document.getElementById("a");
a.innerHTML="";
if(q.input){
a.innerHTML=`<input placeholder="Wpisz odpowied≈∫"><br><br><button class="primary" onclick="next()">Dalej</button>`;
} else {
q.a.forEach(x=>{
const b=document.createElement("button");
b.innerText=x;
b.className="secondary";
b.onclick=()=>{
document.querySelectorAll(".answers button").forEach(btn=>btn.disabled=true);
if(x===q.correct){
b.classList.add("correct");
} else {
b.classList.add("wrong");
document.querySelectorAll(".answers button").forEach(btn=>{
if(btn.innerText===q.correct)btn.classList.add("correct");
});
}
setTimeout(next,800);
};
a.appendChild(b);
});
}
}

document.getElementById("noBtn").addEventListener("mouseover",e=>{
e.target.style.left=Math.random()*200+"px";
e.target.style.top=Math.random()*120+"px";
});

function yes(){
document.getElementById("final").classList.add("hidden");
document.getElementById("end").classList.remove("hidden");
for(let i=0;i<40;i++)heart();
}

function heart(){
const h=document.createElement("div");
h.className="heart";
h.innerText="‚ù§Ô∏è";
h.style.left=Math.random()*100+"vw";
h.style.fontSize=20+Math.random()*30+"px";
document.body.appendChild(h);
setTimeout(()=>h.remove(),6000);
}
</script>

